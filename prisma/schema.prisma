// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model buyers {
  buyer_id  Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  address   String
  contactNo String   @unique
  password  String
  otp          String?
  otpExpiresAt DateTime?
  
}
model passwordResetTokens {
  id        Int      @id @unique @default(autoincrement())
  email     String
  token     String
  expiresAt DateTime
}

model sellers {
  seller_id     Int              @unique @default(autoincrement())
  store_name    String?
  email         String           @unique
  line1         String?
  line2         String?
  district      String?
  contactNo     String?          @unique
  password      String?
  OTP           String?
  otpExpiresAt  DateTime?
  emailVerified Boolean
  products      products[]
}



model verification_codes {
  id    Int    @id @default(autoincrement())
  email String
  code  String
}

model products {
  product_id Int          @id @unique @default(autoincrement())
  seller     sellers      @relation(fields: [sellerId], references: [seller_id])
  sellerId   Int
  district   String
  categories categories[]
}

model categories {
  id       Int        @id @unique @default(autoincrement())
  cat_name String
  products products[]
}
